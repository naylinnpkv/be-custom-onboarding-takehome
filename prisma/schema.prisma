generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  password  String
  birthdate DateTime?
  address   Address?
}

model Address {
  id     String @id @default(uuid())
  street String
  city   String
  state  String
  zip    String
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Component {
  id   String @id @default(uuid())
  name String
  step Int
}
